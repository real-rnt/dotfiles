{
    "[python]": {
        "editor.formatOnType": true
    },
    "python.defaultInterpreterPath": "C:\\Users\\renat\\AppData\\Local\\Programs\\Python\\Python311\\python.exe",
    "git.autofetch": true,
    "diffEditor.ignoreTrimWhitespace": false,

    // Personal
    "editor.lineHeight": 1.4,
    "explorer.compactFolders": false,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontLigatures": false,
    "workbench.colorCustomizations": {
      "editorCursor.foreground": "#ffffff",
      "terminalCursor.foreground": "#ffffff",
      "terminal.background": "#00000000"
    },
    "editor.fontSize": 16,
    "workbench.startupEditor": "none",
    "explorer.confirmDragAndDrop": false,
    "editor.cursorBlinking": "solid",

    // VIM
    "vim.leader": " ",
      "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    // switch b/w buffers
    { "before": ["<S-tab>"], "commands": [":bprevious"] },
    { "before": ["<tab>"], "commands": [":bnext"] },

    //File tree
    // {"before" : ["<leader>","e"], "commands" : ["workbench.view.explorer"]},

    // splits
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },

    // split navigation
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // nice to have 
    { "before": ["<C-w>"], "commands": [":q!"] },
    { "before": ["<C-p>"], "commands": ["workbench.action.quickOpen"] }
  ],
  // optimizations
  "editor.cursorStyle": "block",
  "breadcrumbs.enabled": false,
  "search.searchOnType": false,
  "editor.codeLens": false,
  "telemetry.telemetryLevel": "off",
  "editor.lineNumbers": "relative",
  "workbench.sideBar.location": "right",
  "debug.enableStatusBarColor": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDelete": false,
  "terminal.integrated.gpuAcceleration": "off",
  "open-php-html-js-in-browser.selectedBrowser": "Edge",
  "chat.commandCenter.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "toggle",
  "editor.cursorSurroundingLines": 7,
  "workbench.colorTheme": "default dark++",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.editor.empty.hint": "hidden",
  "workbench.activityBar.location": "hidden",
}